#define PLAYGROUND_Y_MAX	strat_infos.area_bbox.y2
#define PLAYGROUND_Y_MIN 	strat_infos.area_bbox.y1

#define N_CORNS            18
#define CORN_EDGE_NUMBER   6
#define CORN_RADIUS        (243)
#define OFFSET_AVOID_RAMPE 50

struct corn_t{
   int16_t x;
   int16_t y;
   uint8_t oa_flag;
   uint8_t special_poly;
};

